<odoo>
<data>
	<!-- Company form view definition -->
	<record model="ir.ui.view" id="view_company_form_androidapp">
		<field name="name">view_company_form_androidapp</field>
		<field name="model">res.company</field>
		<field name="inherit_id" ref="base.view_company_form"/>
		<field name="arch" type="xml">
			<field name="report_header" position="after">
				<field name="app_version" string="App Version"/>
				<field name="app_link" string="App Link"/>
			</field>
            <notebook position="inside">
                <page string="Banner Messages">
					<field name="banner_messages" mode="tree">
						<form string="Banner Messages">
							<field name="message"/>
						</form>
						<tree string="Banner Messages" editable="bottom">
							<field name="message"/>
						</tree>
					</field>
                </page>
            </notebook>
		</field>
	</record>
</data>
</odoo>