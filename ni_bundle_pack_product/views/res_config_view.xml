<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
	<record id="res_config_settings_view_form_product_bundling" model="ir.ui.view">
		<field name="name">account.res_config_settings_view_form_product_bundling</field>
			<field name="model">res.config.settings</field>
			<field name="inherit_id" ref="sale.res_config_settings_view_form"/>
			<field name="arch" type="xml">
				<xpath expr="//div[@data-key='sale_management']/div/div[4]" position="after">
					<div class="col-xs-12 col-md-6 o_setting_box" title="Use this product as discount item when adjusting product bundling price">
						<div class="o_setting_left_pane"/>
						<div class="o_setting_right_pane">
							<label string="Discount Product"/>
							<div class="text-muted">
								Product used for discount when adjusting product bundling price
							</div>
							<div class="text-muted">
								<field name="discount_product"/>
							</div>
						</div>
					</div>
				</xpath>
		</field>
	</record>
</data>
</odoo>
